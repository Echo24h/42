server {
                location / {
                        root /data/www;
                }

                location /images/ {
                        root /data;
                }
        }

        server {
                listen 3000;

                # default root for nested location context
                root /data/up1;

                location / {
                        proxy_pass http://localhost:3000/;
                }

                # regex must be preceded by ~
                location ~ \.(gif|jpg|png)$ {
                        root /data/images;
                }
        }
